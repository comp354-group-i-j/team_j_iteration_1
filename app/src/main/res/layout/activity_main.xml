<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_viewChart"
        android:layout_width="156dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:onClick="viewChart"
        android:text="@string/button_ViewChart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_TempLow" />

    <TextView
        android:id="@+id/text_TempAvg"
        android:layout_width="120"
        android:layout_height="32"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="12dp"
        android:text="@string/text_TempAverage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_TempAvg" />

    <EditText
        android:id="@+id/number_TempAvg"
        android:layout_width="120"
        android:layout_height="120"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:ems="10"
        android:hint="@string/number_TempAvg"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="64dp" />

    <TextView
        android:id="@+id/text_WindAvg"
        android:layout_width="120"
        android:layout_height="32"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="12dp"
        android:text="@string/text_WindAverage"
        app:layout_constraintStart_toEndOf="@+id/text_TempAvg"
        app:layout_constraintTop_toBottomOf="@+id/number_WindAvg" />

    <EditText
        android:id="@+id/number_WindAvg"
        android:layout_width="120"
        android:layout_height="120"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="@string/number_WindAvg"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/number_TempAvg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_TempLow"
        android:layout_width="120"
        android:layout_height="32"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="12dp"
        android:text="@string/text_TempLow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_TempLow" />

    <EditText
        android:id="@+id/number_TempLow"
        android:layout_width="120"
        android:layout_height="120"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/number_TempLow"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_TempAvg" />

    <TextView
        android:id="@+id/text_TempHigh"
        android:layout_width="120"
        android:layout_height="32"
        android:layout_marginTop="12dp"
        android:text="@string/text_TempHigh"
        app:layout_constraintTop_toBottomOf="@+id/number_TempHigh"
        tools:layout_editor_absoluteX="184dp" />

    <EditText
        android:id="@+id/number_TempHigh"
        android:layout_width="120"
        android:layout_height="120"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/number_TempHigh"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toEndOf="@+id/number_TempLow"
        app:layout_constraintTop_toBottomOf="@+id/text_WindAvg" />

    <TextView
        android:id="@+id/text_StatsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/text_statsTitle" />

</android.support.constraint.ConstraintLayout>